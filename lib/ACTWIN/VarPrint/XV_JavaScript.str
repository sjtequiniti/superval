function hidetoc(thisbtn) {	var toc = document.getElementById('toc');	var loc = document.getElementById('bn_lock');	switch(thisbtn.innerHTML) {		case 'Hide ToC':			toc.style.display = 'none';			loc.style.display = 'none';			document.body.style.paddingLeft = '1em';			thisbtn.innerHTML = 'Show ToC';			thisbtn.style.opacity = '0.4';			thisbtn.style.filter = 'alpha(opacity=40)';			break;		case 'Show ToC':			toc.style.display = 'block';			loc.style.display = 'inline';			document.body.style.paddingLeft = '18em';			thisbtn.style.opacity = '1.0';			thisbtn.style.filter = 'alpha(opacity=100)';			thisbtn.innerHTML = 'Hide ToC';			break;	}}function locktoc(thisbtn) {	var toc = document.getElementById('toc');	var ctl = document.getElementById('toc-controls');	switch(thisbtn.innerHTML) {		case 'Lock':			toc.style.position = 'absolute';			ctl.style.position = 'absolute';			thisbtn.innerHTML = 'Float';			break;		case 'Float':			toc.style.position = 'fixed';			ctl.style.position = 'fixed';			thisbtn.innerHTML = 'Lock';			break;	}}